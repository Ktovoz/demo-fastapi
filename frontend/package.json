{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:real",
    "build": "npm run build:real",
    "preview": "npm run preview:real",
    "dev:mock": "cross-env VITE_USE_MOCK=true vite",
    "dev:real": "cross-env VITE_USE_MOCK=false vite",
    "build:mock": "cross-env VITE_USE_MOCK=true vite build",
    "build:real": "cross-env VITE_USE_MOCK=false vite build && node -e \"const fs = require('fs'); const content = fs.readFileSync('public/config.js', 'utf8'); const replaced = content.replace('\\${VITE_API_BASE_URL}', process.env.VITE_API_BASE_URL || 'https://demo-fast-backend.ktovoz.com'); fs.writeFileSync('dist/config.js', replaced);\"",
    "preview:mock": "cross-env VITE_USE_MOCK=true vite preview",
    "preview:real": "cross-env VITE_USE_MOCK=false vite preview"
  },
  "dependencies": {
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "ant-design-vue": "^4.0.8",
    "axios": "^1.6.2",
    "@ant-design/icons-vue": "^7.0.1",
    "loglevel": "^1.8.1",
    "loglevel-plugin-prefix": "^0.8.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "vite": "^5.0.8",
    "cross-env": "^7.0.3"
  }
}
